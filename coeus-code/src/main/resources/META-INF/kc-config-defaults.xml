	<param name="kc.pd.mode">LOCAL</param>
	<param name="kc.ip.mode">LOCAL</param>
	<param name="kc.award.mode">LOCAL</param>
	<param name="kc.subaward.mode">LOCAL</param>
	<param name="kc.negotiation.mode">LOCAL</param>
