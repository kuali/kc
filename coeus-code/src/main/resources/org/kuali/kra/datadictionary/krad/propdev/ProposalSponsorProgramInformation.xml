<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Proposal Sponsor Program Page -->
	<bean id="PropDev-SponsorProgramInfo" parent="PropDev-SponsorProgramInfo-parentBean" />
	<bean id="PropDev-SponsorProgramInfo-parentBean" parent="Uif-DocumentPage">
		<property name="items">
			<list>
				<bean parent="PropDev-SponsorProgramInfoDefaultDetails-Section" p:order="10" />
			</list>
		</property>
		<property name="header.headerText" value="Sponsor &amp; Program Information" />
		<property name="header.lowerGroup">
			<bean parent="Uif-VerticalBoxGroup">
				<property name="items">
					<list>
						<bean parent="Uif-Message" p:messageText="[p]* indicates required fields[/p]"
							p:cssClasses="text-muted" />
					</list>
				</property>
			</bean>
		</property>
		<property name="footer">
			<null />
		</property>
	</bean>	
	
		
	<bean id="PropDev-SponsorProgramInfoDefaultDetails-Section" parent="PropDev-SponsorProgramInfoDefaultDetails-Section-parentBean" />
	<bean id="PropDev-SponsorProgramInfoDefaultDetails-Section-parentBean" abstract="true"
		parent="Uif-CssGridSection-1FieldLabelColumn"
		p:fieldBindingObjectPath="document.developmentProposal">
		<property name="items">
			<list>
					<bean parent="PropDev-SponsorProgramInfoDate-Section" p:order="10" />
					<bean parent="Uif-InputField" p:propertyName="deadlineType"
					p:order="20" />	
					<bean parent="Uif-InputField" p:propertyName="noticeOfOpportunityCode"
					p:order="30" />
					<bean parent="Uif-InputField" p:propertyName="programAnnouncementNumber" p:readOnly="true"
					p:order="40" />
					<bean parent="Uif-InputField" p:propertyName="cfdaNumber" p:readOnly="false"
					p:order="50" />
					<bean parent="Uif-InputField" p:propertyName="subcontracts"
					p:order="60" />
					<bean parent="Uif-InputField" p:propertyName="sponsorProposalNumber"
					p:order="70" />
					<bean parent="Uif-InputField" p:propertyName="nsfCode"
					p:order="80" /> 	 				
					<bean parent="Uif-InputField" p:propertyName="anticipatedAwardTypeCode"
					p:order="90" />
					<bean parent="Uif-InputField" p:propertyName="programAnnouncementTitle"
					p:readOnly="true" p:order="100" />		
			</list>
		</property>
	</bean>
	
	
	
	<bean id="PropDev-SponsorProgramInfoDate-Section" parent="PropDev-SponsorProgramInfoDate-Section-parentBean" />
	<bean id="PropDev-SponsorProgramInfoDate-Section-parentBean"
		abstract="true" parent="Uif-CssGridFieldGroup" p:label="Sponsor deadline"
		p:required="true">
		<property name="items">
			<list>
				<bean parent="Uif-InputField" p:propertyName="deadlineDate"
					p:colSpan="6" p:fieldLabel.render="false">
					<property name="control">
						<bean parent="Uif-DateControlOnFocus" p:watermarkText="mm/dd/yyyy" />
					</property>
					<property name="postInputAddons">
						<list>
							<bean parent="Uif-Message" p:messageText="at"
								p:wrapperCssClasses="input-group-msg" />
						</list>
					</property>
				</bean>
				<bean parent="Uif-InputField" p:propertyName="deadlineTime"
					p:colSpan="6" p:fieldLabel.render="false">					
				</bean>
			</list>
		</property>
	</bean>
	
</beans>
