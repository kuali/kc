<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="PropDev-Permissions-Wizard" parent="PropDev-Permissions-Wizard-parentBean" />
	<bean id="PropDev-Permissions-Wizard-parentBean" abstract="true"
		parent="Uif-VerticalBoxGroup" class="org.kuali.rice.contrib.uif.element.WizardGroup"
		p:fieldBindingObjectPath="document.addPermissionsHelper" p:resetDataOnRefresh="true"
		p:retrieveViaAjax="true">
		<property name="header">
			<bean parent="Uif-HeaderOne" p:headerText="Access" />
		</property>
		<property name="items">
			<list>
				<bean parent="PropDev-Permissions-WizardPage1" p:order="10" />
<!-- 				<bean parent="PropDev-Permissions-WizardPage2" p:order="20" />
				<bean parent="PropDev-Permissions-WizardPage3" p:order="30" />
-->			</list>
		</property>
	</bean>

	<bean id="PropDev-Permissions-WizardButton" parent="PropDev-Permissions-WizardButton-parentBean" />
	<bean id="PropDev-Permissions-WizardButton-parentBean" abstract="true"
		parent="Uif-PrimaryActionButton" p:refreshId="PropDev-Permissions-Wizard"
		p:methodToCall="refresh" p:actionParameters="PropDev-Permissions-Wizard.step:1" />

	<bean id="PropDev-Permissions-WizardButton-AddUser" parent="PropDev-Permissions-WizardButton-AddUser-parentBean"/>
	<bean id="PropDev-Permissions-WizardButton-AddUser-parentBean"
		abstract="true" parent="PropDev-Permissions-WizardButton"
		p:actionLabel="Add User" p:preSubmitCall="return Kc.PropDev.Personnel.validateWizard('PropDev-Permissions-Wizard');"/>

	<bean id="PropDev-Permissions-WizardButton-Continue" parent="PropDev-Permissions-WizardButton-Continue-parentBean" />
	<bean id="PropDev-Permissions-WizardButton-Continue-parentBean"
		abstract="true" parent="PropDev-Permissions-WizardButton"
		p:actionLabel="Continue..." p:preSubmitCall="return Kc.PropDev.Personnel.validateWizard('PropDev-Permissions-Wizard');"/>

	<bean id="PropDev-Permissions-WizardButton-Back" parent="PropDev-Permissions-WizardButton-Back-parentBean" />
	<bean id="PropDev-Permissions-WizardButton-Back-parentBean"
		abstract="true" parent="PropDev-Permissions-WizardButton"
		p:actionLabel="Go back" />

	<bean id="PropDev-Permissions-WizardPage1" parent="PropDev-Permissions-WizardPage1-parentBean" />
	<bean id="PropDev-Permissions-WizardPage1-parentBean" abstract="true"
		parent="Uif-CssGridSection-1FieldLabelColumn">
		<property name="header">
			<bean parent="Uif-HeaderBase">
				<property name="items">
					<list>
						<bean parent="PropDev-Permissions-WizardButton-AddUser"
							p:actionParameters="PropDev-Permissions-Wizard.step:1" p:order="10" />
					</list>
				</property>
			</bean>
		</property>
		<property name="items">
			<list>
 				<bean parent="PropDev-Permissions-WizardUserTable"
					p:order="10" />
			</list>
		</property>
	</bean>

	<bean id="PropDev-Permissions-WizardInputField" parent="PropDev-Permissions-WizardInputField-parentBean" />
	<bean id="PropDev-Permissions-WizardInputField-parentBean"
		abstract="true" parent="Uif-InputField" p:fieldLabel.renderColon="false"
		p:dictionaryObjectEntry="org.kuali.coeus.common.framework.person.KcPerson" />

