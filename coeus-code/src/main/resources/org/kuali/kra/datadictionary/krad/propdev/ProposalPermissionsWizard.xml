	<!--  wrap table in field element -->
	<bean id="PropDev-Permissions-WizardUserTable" parent="Uif-FieldGroupBase">
		<property name="group">
			<bean parent="PropDev-Permissions-WizardUserTable-parentBean" />
		</property>
	</bean>

	<bean id="PropDev-Permissions-WizardUserTable-parentBean" abstract="true"
		parent="Uif-TableCollectionSection" p:propertyName="document.developmentProposal.userRoles"
		p:collectionObjectClass="org.kuali.coeus.propdev.impl.docperm.ProposalUserRoles"
		p:renderAddLine="false" p:layoutManager.richTable.render="true"
		p:layoutManager.renderSequenceField="false">
		<property name="items">
			<list>
				<bean parent="Uif-InputField" p:propertyName="fullname" p:order="10" />
				<bean parent="Uif-InputField" p:propertyName="roleLabelString" p:order="20" />
			</list>
		</property>
