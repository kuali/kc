                    <property name="requiresWritableDoc" value="true" />
                </bean>
                <bean class="org.kuali.coeus.propdev.impl.auth.task.BasicProposalAuthorizer" parent="parentProposalAuthorizer">
                    <property name="taskName" value="printProposal" />
                    <property name="permission" value="Print Proposal" />
                </bean>
                <bean class="org.kuali.coeus.propdev.impl.action.SubmitToSponsorAuthorizer" parent="parentProposalAuthorizer">
                    <property name="taskName" value="submitToSponsor" />
                    <property name="requiresWritableDoc" value="true" />
                </bean>
                <bean class="org.kuali.coeus.propdev.impl.core.SubmitToWorkflowAuthorizer" parent="parentProposalAuthorizer">
                    <property name="taskName" value="submitToWorkflow" />
                    <property name="requiresWritableDoc" value="true" />
                    <property name="kraWorkflowService" ref="kcWorkflowService" />
                </bean>
                <bean class="org.kuali.coeus.propdev.impl.auth.task.BasicProposalAuthorizer" parent="parentProposalAuthorizer">
                    <property name="taskName" value="certify" />
                    <property name="permission" value="Certify" />
                    <property name="requiresWritableDoc" value="true" />
                </bean>
                <bean class="org.kuali.coeus.propdev.impl.editable.ShowAlterProposalDataAuthorizer" parent="parentProposalAuthorizer">
                    <property name="taskName" value="showAlterProposalData" />
                    <property name="kraWorkflowService" ref="kcWorkflowService" />
                </bean>
                <bean class="org.kuali.coeus.propdev.impl.editable.AlterProposalDataAuthorizer" parent="parentProposalAuthorizer">
                    <property name="taskName" value="alterProposalData" />
                    <property name="requiresWritableDoc" value="true" />
                    <property name="kcWorkflowService" ref="kcWorkflowService" />
                    <property name="proposalHierarchyService" ref="proposalHierarchyService" />
                </bean>
                <bean class="org.kuali.coeus.propdev.impl.docperm.ModifyProposalPermissionsAuthorizer" parent="parentProposalAuthorizer">
                    <property name="taskName" value="modifyProposalRoles" />
                    <property name="requiresWritableDoc" value="true" />
                    <property name="kraWorkflowService" ref="kcWorkflowService" />
                </bean>
                <bean class="org.kuali.coeus.propdev.impl.action.ProposalHierarchyChildWorkflowActionAuthorizer"
