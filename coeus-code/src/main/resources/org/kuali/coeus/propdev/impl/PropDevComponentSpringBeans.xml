                <bean class="org.kuali.coeus.propdev.impl.core.ViewProposalAuthorizer" parent="parentProposalAuthorizer">
                    <property name="taskName" value="viewProposal" />
                    <property name="kraWorkflowService" ref="kcWorkflowService" />
                </bean>
