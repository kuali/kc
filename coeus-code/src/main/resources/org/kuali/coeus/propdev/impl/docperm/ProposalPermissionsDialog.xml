<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="PropDev-PermissionsDialog-AddUserButton" parent="PropDev-PermissionsDialog-AddUserButton-parentBean"/>
	<bean id="PropDev-PermissionsDialog-AddUserButton-parentBean"
		parent="Uif-SecondaryActionButton" 
		p:actionLabel="Add User" p:iconClass="icon-user" />

	<bean id="PropDev-PermissionsDialog" parent="PropDev-PermissionsDialog-parentBean" />
	<bean id="PropDev-PermissionsDialog-parentBean" parent="Uif-DialogGroup"
        abstract="true" p:headerText="Access" p:resetDataOnRefresh="true"
        p:retrieveViaAjax="true">
		<property name="items">
			<list>
 				<bean parent="PropDev-PermissionsDialog-UserTable" p:order="10" />
			</list>
		</property>
        <property name="header">
            <bean parent="Uif-PageHeader" />
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="Uif-PrimaryActionButton" p:methodToCall="savePermissions" p:actionLabel="save"/>
                        <bean parent="Uif-PrimaryActionButton" p:methodToCall="refresh" p:onClickScript="closeLightbox();" p:actionLabel="cancel"/>
                    </list>
                </property>
            </bean>
        </property>
	</bean>

	<!--  wrap table in field element -->
	<bean id="PropDev-PermissionsDialog-UserTable" parent="Uif-FieldGroupBase">
		<property name="group">
			<bean parent="PropDev-PermissionsDialog-UserTable-parentBean" />
		</property>
	</bean>

<!--  the following bean has been defined with inline addLine.  Eventually when KRAD fixes some issues, -->
<!--  change it to addWithDialog="true" and add lookup fields to lightbox.                              -->
	<bean id="PropDev-PermissionsDialog-UserTable-parentBean" abstract="true"
		parent="Uif-TableCollectionSection" p:propertyName="permissionsHelper.userRoles"
		p:collectionObjectClass="org.kuali.coeus.propdev.impl.docperm.ProposalUserRoles"
		p:renderAddLine="true" p:layoutManager.richTable.render="true"
		p:layoutManager.renderSequenceField="false">
		<property name="layoutManager.addLineGroup.header">
			<bean parent="Uif-HeaderFour" p:headerText="Access: Add User"/>
		</property>
		<property name="items">
			<list>
                <bean parent="Uif-InputField" p:propertyName="username" p:order="10" />
				<bean parent="PropDev-PermissionsDialog-PersonSearch" p:order="20" />
 			    <bean parent="Uif-InputField" p:propertyName="roleNames" p:label="Roles" p:order="30">
					<property name="control">
						<bean parent="Uif-AdvancedMultiSelectControl">
							<property name="templateOptions">
								<map merge="true">
									<entry key="&quot;position&quot;" value="{&quot;my&quot;:&quot;left bottom&quot;, &quot;at&quot;:&quot;left top&quot;}"/>
								</map>
							</property>
						</bean>
					</property>
					<property name="optionsFinder">
						<bean class="org.kuali.coeus.propdev.impl.docperm.ProposalRoleValuesFinder"	p:addBlankOption="false"/>
					</property>
				</bean>
			</list>
		</property>
        <property name="footer">
            <null />
        </property>
	</bean>

	<bean id="PropDev-PermissionsDialog-PersonSearch" parent="PropDev-PermissionsDialog-PersonSearch-parentBean" />
	<bean id="PropDev-PermissionsDialog-PersonSearch-parentBean" abstract="true" parent="Uif-InputField"
		p:fieldLabel.render="false" p:propertyName="username">
		<property name="control">
			<bean parent="Uif-HiddenControl" />
		</property>
		<property name="quickfinder">
			<bean parent="Uif-QuickFinder" p:dataObjectClassName="org.kuali.rice.kim.impl.identity.PersonImpl"
				p:hideCriteriaOnSearch="true"
                p:returnByScript="true"
				p:fieldConversions="principalName:username">
				<property name="quickfinderAction">
					<bean parent="Uif-PrimaryActionButton-Small" p:methodToCall="performLookup"
						p:wrapperCssClasses="input-group-btn"
						p:actionLabel="Find User" p:iconClass="icon-search" />
				</property>
			</bean>
		</property>
	</bean>

  <bean id="PropDev-PermissionsDialog-PersonLookup" parent="PropDev-PermissionsDialog-PersonLookup-parentBean"/>
  <bean id="PropDev-PermissionsDialog-PersonLookup-parentBean" abstract="true" parent="Uif-LookupView"
  		p:viewName="PropDev-PermissionsDialog-PersonLookup"
		p:dataObjectClassName="org.kuali.coeus.common.framework.person.KcPerson"
		p:headerText="KcPerson Lookup">
    <property name="page.header.lowerGroup">
      <bean parent="Uif-HeaderLowerGroup">
        <property name="items">
          <list merge="true">
            <bean parent="Uif-Message">
              <property name="messageText" value="[&lt;a href=&quot;index.jsp&quot;&gt;Main&lt;/a&gt;]"/>
            </bean>
          </list>
        </property>
      </bean>
    </property>
		<property name="criteriaFields">
			<list>
				<bean p:propertyName="personId" parent="Uif-LookupCriteriaInputField"/>
				<bean p:propertyName="lastName" parent="Uif-LookupCriteriaInputField"/>
				<bean p:propertyName="firstName" parent="Uif-LookupCriteriaInputField"/>
				<bean p:propertyName="principalName" parent="Uif-LookupCriteriaInputField"/>
				<bean p:propertyName="emailAddress" parent="Uif-LookupCriteriaInputField"/>
				<bean p:propertyName="officePhone" parent="Uif-LookupCriteriaInputField"/>
				<bean p:propertyName="unit.unitNumber" parent="Uif-LookupCriteriaInputField"/>
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean p:propertyName="personId" parent="Uif-DataField"/>
				<bean p:propertyName="lastName" parent="Uif-DataField"/>
				<bean p:propertyName="firstName" parent="Uif-DataField"/>
				<bean p:propertyName="principalName" parent="Uif-DataField"/>
				<bean p:propertyName="emailAddress" parent="Uif-DataField"/>
				<bean p:propertyName="officePhone" parent="Uif-DataField"/>
				<bean p:propertyName="unit.unitNumber" parent="Uif-DataField"/>
			</list>
		</property>
  </bean>

</beans>
