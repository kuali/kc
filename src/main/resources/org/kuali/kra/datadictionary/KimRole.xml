<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.kim.bo.KimRole">

        <inquiry>
            <title>Role</title>

            <inquirySections>
            	<inquirySection title="KimRole">
            		<inquiryFields>
                		<field attributeName="id" forceInquiry="true"/>
                		<field attributeName="name"/>
                		<field attributeName="roleTypeName" />
                		<field attributeName="description"/>
                		<field attributeName="descend"/>
            		</inquiryFields>
            	</inquirySection>
            	
            	<inquirySection title="Permissions">
            		<inquiryFields>
	            		<inquiryCollection name="rolePermissions" businessObjectClass="org.kuali.kra.kim.bo.KimRolePermission">
	            			<field attributeName="permissionId" />
    	        		    <field attributeName="permission.name" />
        	    			<field attributeName="active" />
            			</inquiryCollection>
            		</inquiryFields>
            	</inquirySection>
            </inquirySections>
        </inquiry>

        <lookup>
            <title>Role Lookup</title>
            <menubar>
                <![CDATA[<a href="index.jsp">Main</a>]]>
            </menubar>
            <instructions>Look up a Role</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="name"/>
                    <sortAttribute attributeName="roleTypeName"/>
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="name" required="false"/>
                <lookupField attributeName="roleTypeCode" required="false"/>
                <lookupField attributeName="description" required="false"/>
                <lookupField attributeName="descend" required="false"/>
            </lookupFields>

            <resultFields>
                <field attributeName="name" forceInquiry="true" />
                <field attributeName="roleTypeName" forceInquiry="true" />
                <field attributeName="description" forceInquiry="true" />
                <field attributeName="descend" forceInquiry="false" />
            </resultFields>
        </lookup>

        <titleAttribute>id</titleAttribute>
        <attributes>
            <attribute name="id">
                <label>Role Id </label>
                <shortLabel>Role Id </shortLabel>
                <maxLength>8</maxLength>
                <validationPattern><numeric /></validationPattern>
                <control>
                    <hidden />
                </control>
                <summary>Role Id </summary>
                <description>Role Id </description>
            </attribute>

            <attribute name="name" >
                <label>Role Name</label>
                <shortLabel>Role Name</shortLabel>
                <maxLength>500</maxLength>
                <control>
                    <text size="40" />
                </control>
                <summary>Role Name</summary>
                <description>Role Name</description>
            </attribute>
            
             <attribute name="roleTypeCode">
                <label>Role Type</label>
                <shortLabel>Role Type</shortLabel>
                <maxLength>1</maxLength>
                <required>true</required>
                <control>
                    <select valuesFinderClass="org.kuali.kra.kim.lookup.keyvalue.KimRoleTypeValuesFinder" />
                </control>
                <summary>Role Type</summary>
                <description>Role Type</description>
            </attribute>

            <attributeReference name="description" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="bigDescription">
                <maxLength>4000</maxLength>
            </attributeReference>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
       
            <attribute name="roleTypeName" >
                <label>Role Type</label>
                <shortLabel>Role Type </shortLabel>
                <maxLength>500</maxLength>
                <required>false</required>
                <control>
                    <text size="40" />
                </control>
                <summary>Role Type</summary>
                <description>Role Type</description>
            </attribute>
            
            <attributeReference name="descend" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericBoolean">
                <label>Descend</label>
                <shortLabel>Descend </shortLabel>
                <summary>Descend</summary>
                <description>Descend</description>
            </attributeReference>
        </attributes>

		<collections>
        	<collection name="rolePermissions">
        		<label>Role Permissions</label>
        		<shortLabel>Role Perm.</shortLabel>
        		<elementLabel>Role Permission</elementLabel>
        		<summary>Role Permissions</summary>
        		<description>
                  Permissions assigned to a given Role
        		</description>
        	</collection>
        </collections>
    </businessObject>

</dictionaryEntry>
