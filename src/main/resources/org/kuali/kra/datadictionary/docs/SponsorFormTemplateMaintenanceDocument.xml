<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.kra.bo.SponsorFormTemplate</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>

        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>WorkflowAdmin</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>SponsorFormTemplateMaintenanceDocument</documentTypeName>
        <documentTypeCode>SFTM</documentTypeCode>

        <label>SponsorFormTemplates Maintenance Document</label>
        <shortLabel>sponsorFormTemplatesMaintDoc</shortLabel>

        <summary>SponsorFormTemplates Maintenance Document</summary>
        <description>Document used to create or update SponsorFormTemplates Reference objects</description>

        <lockingKeys>
        	<field attributeName="packageNumber" />

        </lockingKeys>
        
        <defaultExistenceChecks>
            <!-- FIXME: should highlight multiple fields (sponsorCode & packageNumber) once rice supports this capability -->
            <reference attributeName="sponsorForms"
                attributeToHighlightOnFail="sponsorCode" displayFieldName="Sponsor Code and Package Number" 
            />
        </defaultExistenceChecks>

        <maintainableSections>
            <maintainableSection title="Edit SponsorFormTemplates">
                <maintainableItems>
					<maintainableField name="packageNumber" required="true"/>
					<maintainableField name="pageDescription" required="true"/>
					<maintainableField name="pageNumber" required="true"/>
					<maintainableField name="sponsorCode" required="true"/>
					<maintainableField name="templateFile" required="false" />

                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>
