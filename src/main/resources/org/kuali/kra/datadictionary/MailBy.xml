<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.proposaldevelopment.bo.MailBy">

        <inquiry>
            <title>Mail By</title>

            <inquirySections><inquirySection title="Mail By"><inquiryFields>
                <field attributeName="mailByCode" forceInquiry="true" />
                <field attributeName="description" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Mail By Lookup</title>
			<menubar>
				<![CDATA[<a href="/kra-dev/index.html">Main</a>]]>
			</menubar>
            <instructions>Look up a Mail By</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="mailByCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="mailByCode" required="false" />
                <lookupField attributeName="description" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="mailByCode" forceInquiry="true" />
                <field attributeName="description" forceInquiry="false"/>
            </resultFields>
        </lookup>

        <titleAttribute>mailByCode</titleAttribute>

        <attributes>

            <attribute name="mailByCode">
                <label>Mail By</label>
                <shortLabel>Mail By</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary>Mail By</summary>
                <description>Mail By</description>
			</attribute>

            <attributeReference name="description" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="description" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

		</attributes>
    </businessObject>

</dictionaryEntry>