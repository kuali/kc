<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.budget.bo.JobCode">

        <inquiry>
            <title>Job Code</title>

            <inquirySections><inquirySection title="Job Code"><inquiryFields>
            	<field attributeName="jobCode" forceInquiry="true"/>
				<field attributeName="jobTitle"/>

            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Job Code Lookup</title>
			<menubar>
				<![CDATA[<a href="/kra-dev/">Main</a>]]>
			</menubar>
            <instructions>Look up a Job Code</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="jobCode"/>

                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="jobCode" required="false"/>
				<lookupField attributeName="jobTitle" required="false"/>

            </lookupFields>

            <resultFields>
            	<field attributeName="jobCode" forceInquiry="true"/>
				<field attributeName="jobTitle" forceInquiry="false"/>

            </resultFields>
        </lookup>

        <titleAttribute>jobCode</titleAttribute>
        <attributes>

	        <attribute name="jobCode">
			<label>Job Code </label>
			<shortLabel>Job Code </shortLabel>
			<maxLength>6</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<text size="6" />
			</control>
			<summary>Job Code </summary>
			<description>Job Code </description>
			</attribute>

			<attribute name="jobTitle">
			<label>Job Title </label>
			<shortLabel>Job Title </shortLabel>
			<maxLength>50</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<text size="50" />
			</control>
			<summary>Job Title </summary>
			<description>Job Title </description>
			</attribute>

		</attributes>
    </businessObject>

</dictionaryEntry>
