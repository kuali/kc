<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.budget.bo.TbnPerson">

        <inquiry>
            <title>To Be Named Persons</title>
            <inquirySections><inquirySection title="TBN Persons"><inquiryFields>
            	<field attributeName="tbnId" forceInquiry="true"/>
            	<field attributeName="personName"/>
				<field attributeName="jobCodeReference.jobTitle" forceInquiry="true"/>
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>To Be Named Persons Lookup</title>
			<menubar>
				<![CDATA[<a href="index.jsp">Main</a>]]>
			</menubar>
            <instructions>Look up a TBN Person</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="tbnId"/>
                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="tbnId" required="false"/>
            	<lookupField attributeName="personName" required="false"/>
				<lookupField attributeName="jobCode" required="false"/>
            </lookupFields>

            <resultFields>
            	<field attributeName="tbnId" forceInquiry="true"/>
            	<field attributeName="personName" forceInquiry="false"/>
				<field attributeName="jobCodeReference.jobTitle" forceInquiry="true"/>
            </resultFields>
        </lookup>

		<titleAttribute>tbnId</titleAttribute>
		
        <attributes>
        
        	<attribute name="tbnId">
			<label>TBN Id </label>
			<shortLabel>TBN Id </shortLabel>
			<maxLength>9</maxLength>
			<validationPattern><numeric /></validationPattern>
			<control>
				<text size="9" />
			</control>
			<summary>TBN Id </summary>
			<description>TBN Id </description>
			</attribute>

			<attribute name="jobCode">
				<label>Job Code</label>
				<shortLabel>Job Code</shortLabel>
				<maxLength>6</maxLength>
				<validationPattern><alphaNumeric /></validationPattern>
				<required>true</required>
				<control>
					<text size="6" />
				</control>
				<summary>Job Code</summary>
				<description>Job Code</description>
			</attribute>

			<attributeReference name="jobCodeReference.jobTitle" sourceClassName="org.kuali.kra.budget.bo.JobCode" sourceAttributeName="jobTitle" >
				<label>Job</label>
				<shortLabel>Job</shortLabel>
            </attributeReference>
			
			<attribute name="personName" >
                <label>Person Name</label>
                <shortLabel>Person Name</shortLabel>
                <maxLength>90</maxLength>
                <control>
                    <text size="40" />
                </control>
                <summary>Person Name</summary>
            	<description>Person Name</description>
            </attribute>

			<attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
		</attributes>

          <relationships>
            <relationship objectAttributeName="jobCodeReference">
                <primitiveAttribute sourceName="jobCode" targetName="jobCode" />
                <supportAttribute sourceName="jobCodeReference.jobTitle" targetName="jobTitle" identifier="true" />
            </relationship>
        </relationships>
    </businessObject>

</dictionaryEntry>
