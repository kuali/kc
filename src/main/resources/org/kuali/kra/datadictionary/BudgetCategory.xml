<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.budget.bo.BudgetCategory">

        <inquiry>
            <title>Budget Category</title>

            <inquirySections><inquirySection title="Budget Category"><inquiryFields>
            	<field attributeName="budgetCategoryCode" forceInquiry="true"/>
				<field attributeName="categoryType"/>
				<field attributeName="description"/>

            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Budget Category Lookup</title>
			<menubar>
				<![CDATA[<a href="/kra-dev/">Main</a>]]>
			</menubar>
            <instructions>Look up a Budget Category</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="budgetCategoryCode"/>

                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="budgetCategoryCode" required="false"/>
				<lookupField attributeName="categoryType" required="false"/>
				<lookupField attributeName="description" required="false"/>

            </lookupFields>

            <resultFields>
            	<field attributeName="budgetCategoryCode" forceInquiry="true"/>
				<field attributeName="categoryType" forceInquiry="false"/>
				<field attributeName="description" forceInquiry="false"/>

            </resultFields>
        </lookup>

        <titleAttribute>budgetCategoryCode</titleAttribute>
        <attributes>

	        <attribute name="budgetCategoryCode">
			<label>Budget Category Code </label>
			<shortLabel>Budget Category Code </shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><numeric /></validationPattern>
			<control>
				<text size="3" />
			</control>
			<summary>Budget Category Code </summary>
			<description>Budget Category Code </description>
			</attribute>

			<attribute name="categoryType">
			<label>Category Type </label>
			<shortLabel>Category Type </shortLabel>
			<maxLength>1</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<text size="1" />
			</control>
			<summary>Category Type </summary>
			<description>Category Type </description>
			</attribute>

			<attribute name="description">
			<label>Description </label>
			<shortLabel>Description </shortLabel>
			<maxLength>200</maxLength>
			<validationPattern><anyCharacter /></validationPattern>
			<control>
				<text size="200" />
			</control>
			<summary>Description </summary>
			<description>Description </description>
			</attribute>

		</attributes>
    </businessObject>

</dictionaryEntry>
