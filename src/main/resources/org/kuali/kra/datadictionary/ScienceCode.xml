<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.bo.ScienceCode">

        <inquiry>
            <title>Science Code</title>

            <inquirySections><inquirySection title="Science Code"><inquiryFields>
                <field attributeName="scienceCode" forceInquiry="true" />
                <field attributeName="description" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Science Code Lookup</title>
			<menubar>
				<![CDATA[<a href="/kra-dev/index.html">Main</a>]]>
			</menubar>
            <instructions>Look up a Science Code</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="scienceCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="scienceCode" required="false" />
                <lookupField attributeName="description" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="scienceCode" forceInquiry="true" />
                <field attributeName="description" forceInquiry="false"/>
            </resultFields>
        </lookup>

        <titleAttribute>scienceCode</titleAttribute>

        <attributes>

            <attribute name="scienceCode">
                <label>Science Code</label>
                <shortLabel>Science Code</shortLabel>

                <maxLength>15</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <control>
                    <text size="10" />
                </control>

                <summary>Science Code</summary>
                <description>Science Code</description>
			</attribute>

            <attribute name="description" forceUppercase="false">
                <label>Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>200</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <textarea rows="5" cols="40" />
                </control>

                <summary>Description</summary>
                <description>Description</description>
			</attribute>



		</attributes>
    </businessObject>

</dictionaryEntry>