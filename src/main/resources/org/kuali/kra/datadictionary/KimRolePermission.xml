<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.kim.bo.KimRolePermission">

        <inquiry>
            <title>Role-Permission</title>

            <inquirySections><inquirySection title="RolePermission"><inquiryFields>
                <field attributeName="roleId"/>
                <field attributeName="permissionId"/>
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Role-Permission Lookup</title>
            <menubar>
                <![CDATA[<a href="index.jsp">Main</a>]]>
            </menubar>
            <instructions>Look up a Role-Permission</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="roleName"/>
                    <sortAttribute attributeName="permissionName"/>
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="roleId" required="false"/>
                <lookupField attributeName="permissionId" required="false"/>
                <lookupField attributeName="active" required="false"/>
            </lookupFields>

            <resultFields>
                <field attributeName="roleId" forceInquiry="false" />
                <field attributeName="roleName" forceInquiry="false"/>
                <field attributeName="roleTypeName" forceInquiry="false" />
                <field attributeName="permissionId" forceInquiry="false"/>
                <field attributeName="permissionName" forceInquiry="false"/>
                <field attributeName="active" forceInquiry="false"/>
            </resultFields>
        </lookup>

        <attributes>
            <attribute name="roleId" >
                <label>Role Id</label>
                <shortLabel>Role Id</shortLabel>
                <maxLength>8</maxLength>
                <control>
                    <text size="40" />
                </control>
                <summary>Role Id</summary>
                <description>Role Id</description>
            </attribute>

            <attribute name="permissionId" >
                <label>Permission Id</label>
                <shortLabel>Permission Id</shortLabel>
                <maxLength>8</maxLength>
                <control>
                    <text size="40" />
                </control>
                <summary>Permission Id</summary>
                <description>Permission Id</description>
            </attribute>
            
            <attributeReference name="roleName" sourceClassName="org.kuali.kra.kim.bo.KimRole" sourceAttributeName="name" />
            <attributeReference name="permissionName" sourceClassName="org.kuali.kra.kim.bo.KimPermission" sourceAttributeName="name" />
            <attributeReference name="roleTypeName" sourceClassName="org.kuali.kra.kim.bo.KimRole" sourceAttributeName="roleTypeName" />

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericBoolean">
                <label>Active</label>
                <shortLabel>Active </shortLabel>
                <summary>Active</summary>
                <description>Active</description>
            </attributeReference>
            
            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
        </attributes>
        
        <relationships>
            <relationship objectAttributeName="permission">
                <primitiveAttribute sourceName="permissionId" targetName="id" />
                <supportAttribute sourceName="permission.name" targetName="name" identifier="true" />
            </relationship>
        </relationships>
    </businessObject>

</dictionaryEntry>
