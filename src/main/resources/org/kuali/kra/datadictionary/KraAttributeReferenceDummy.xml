<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.bo.KraAttributeReferenceDummy">


        <attributes>
            <!-- This should be overridden whenever a business object has a -->
            <!-- description attribute to keep them all uniform             -->
            <attribute name="description" forceUppercase="false">
                <label>Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>200</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <textarea rows="5" cols="40" />
                </control>

                <summary>Description</summary>
                <description>Description</description>
			</attribute>

            <!-- This should be overridden whenever a business object has a -->
            <!-- description attribute to keep them all uniform             -->
            <attribute name="bigDescription" forceUppercase="false">
                <label>Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>200</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <textarea rows="20" cols="60"/>
                </control>

                <summary>Description</summary>
                <description>Description</description>
	        </attribute>

			<attribute name="city">
                <label>City </label>
			    <shortLabel>City </shortLabel>
			    <maxLength>30</maxLength>
			    <validationPattern><alphaNumeric /></validationPattern>
                <control>
			    	<text size="30" />
                </control>
                <summary>City </summary>
                <description>City </description>
			</attribute>

            <attribute name="county">
                <label>County </label>
 	            <shortLabel>County </shortLabel>
 	            <maxLength>30</maxLength>
 	            <validationPattern><alphaNumeric /></validationPattern>
 	            <control>
 	                <text size="30" />
 	            </control>
 	            <summary>County </summary>
                <description>County </description>
            </attribute>

			<attribute name="state">
				<label>State </label>
				<shortLabel>State </shortLabel>
				<maxLength>30</maxLength>
				<validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>
				<control>
					<select valuesFinderClass="org.kuali.kra.lookup.keyvalue.StateValuesFinder" />
				</control>
				<summary>State </summary>
				<description>State </description>
			</attribute>

            <attribute name="countryCode">
                <label>Country Code </label>
                <shortLabel>Country Code </shortLabel>
                <maxLength>3</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>
                <control>
                    <select valuesFinderClass="org.kuali.kra.lookup.keyvalue.CountryValuesFinder" />
                </control>
                <summary>Country Code </summary>
                <description>Country Code </description>
            </attribute>

            <attribute name="emailAddress">
                <label>Email Address </label>
                <shortLabel>Email Address </shortLabel>
                <maxLength>60</maxLength>
                <validationPattern><emailAddress /></validationPattern>
                <control>
                    <text size="60" />
                </control>
                <summary>Email Address </summary>
                <description>Email Address </description>
            </attribute>

        </attributes>
    </businessObject>
</dictionaryEntry>