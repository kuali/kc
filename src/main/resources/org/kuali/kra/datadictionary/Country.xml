<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.bo.Country">

        <inquiry>
            <title>Country Code</title>

            <inquirySections><inquirySection title="Country Code"><inquiryFields>
                <field attributeName="countryCode" forceInquiry="true" />
                <field attributeName="countryName" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Country Code Lookup</title>
			<menubar>
				<![CDATA[<a href="/kra-dev/">Main</a>]]>
			</menubar>
            <instructions>Look up a Country Code</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="countryCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="countryCode" required="false" />
                <lookupField attributeName="countryName" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="countryCode" forceInquiry="true" />
                <field attributeName="countryName" forceInquiry="false"/>
            </resultFields>
        </lookup>

        <titleAttribute>countryCode</titleAttribute>

        <attributes>

            <attribute name="countryCode">
                <label>Country Code</label>
                <shortLabel>Country Code</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary>Country Code</summary>
                <description>Country Code</description>
			</attribute>

            <attribute name="countryName">
                <label>Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>40</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <control>
                    <text size="10" />
                </control>

                <summary>Country Name</summary>
                <description>Country Name description...</description>
			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
		</attributes>
    </businessObject>

</dictionaryEntry>