<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="Country" parent="Country-parentBean" />

  <bean id="Country-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.kra.bo.Country" />
    <property name="objectLabel" value="Country" />
    <property name="inquiryDefinition" >
      <ref bean="Country-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="Country-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="countryCode" />
    <property name="attributes" >
      <list>
        <ref bean="Country-countryCode" />
        <ref bean="Country-countryName" />
        <ref bean="Country-versionNumber" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="Country-countryCode" parent="Country-countryCode-parentBean" />

  <bean id="Country-countryCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="countryCode" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Country Code" />
    <property name="shortLabel" value="Country Code" />
    <property name="maxLength" value="3" />
    <property name="validationPattern" >
      <bean parent="AlphaNumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="4" />
    </property>
    <property name="summary" value="Country Code" />
    <property name="description" value="Country Code" />
  </bean>
  <bean id="Country-countryName" parent="Country-countryName-parentBean" />

  <bean id="Country-countryName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="countryName" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Description" />
    <property name="shortLabel" value="Description" />
    <property name="maxLength" value="40" />
    <property name="validationPattern" >
      <bean parent="AlphaNumericValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="10" />
    </property>
    <property name="summary" value="Country Name" />
    <property name="description" value="Country Name description..." />
  </bean>
  <bean id="Country-versionNumber" parent="Country-versionNumber-parentBean" />

  <bean id="Country-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="Country-inquiryDefinition" parent="Country-inquiryDefinition-parentBean" />

  <bean id="Country-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Country Code" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Country Code" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="countryCode"
                    p:forceInquiry="true" />
              <bean parent="FieldDefinition"
                    p:attributeName="countryName" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="Country-lookupDefinition" parent="Country-lookupDefinition-parentBean" />

  <bean id="Country-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Country Code Lookup" />
    <property name="menubar" value="&lt;a href=&quot;index.jsp&quot;&gt;Main&lt;/a&gt;" />
    <property name="instructions" value="Look up a Country Code" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="countryCode" />
        <bean parent="FieldDefinition"
              p:attributeName="countryName" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="countryCode"
              p:forceInquiry="true" />
        <bean parent="FieldDefinition"
              p:attributeName="countryName" />
      </list>
    </property>
  </bean>
</beans>
