<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.bo.UnitAdministrator">

        <inquiry>
            <title>Unit Administrator</title>

            <inquirySections><inquirySection title="Unit Administrator"><inquiryFields>
            	<field attributeName="personId" forceInquiry="true"/>
				<field attributeName="roleId" forceInquiry="true"/>
				<field attributeName="unitNumber" forceInquiry="true"/>

            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Unit Administrator Lookup</title>
			<menubar>
				<![CDATA[<a href="index.jsp">Main</a>]]>
			</menubar>
            <instructions>Look up a Unit Administrators</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="personId"/>
					<sortAttribute attributeName="roleId"/>
					<sortAttribute attributeName="unitNumber"/>

                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="personId" required="false"/>
				<lookupField attributeName="roleId" required="false"/>
				<lookupField attributeName="unitNumber" required="false"/>

            </lookupFields>

            <resultFields>
            	<field attributeName="personId" forceInquiry="true"/>
				<field attributeName="roleId" forceInquiry="true"/>
				<field attributeName="unitNumber" forceInquiry="true"/>

            </resultFields>
        </lookup>

<!-- can only have 0/1 title attribute
        <titleAttribute>personId</titleAttribute>
		<titleAttribute>roleId</titleAttribute>
		-->
		<titleAttribute>unitNumber</titleAttribute>
        <attributes>

	        <attribute name="personId">
			<label>Person Id </label>
			<shortLabel>Person Id </shortLabel>
			<maxLength>10</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<text size="10" />
			</control>
			<summary>Person Id </summary>
			<description>Person Id </description>
			</attribute>

			<attribute name="roleId">
			<label>Role Id </label>
			<shortLabel>Role Id </shortLabel>
			<maxLength>5</maxLength>
			<validationPattern><numeric /></validationPattern>
			<control>
				<text size="5" />
			</control>
			<summary>Role Id </summary>
			<description>Role Id </description>
			</attribute>

			<attribute name="unitNumber">
			<label>Unit Number </label>
			<shortLabel>Unit Number </shortLabel>
			<maxLength>8</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<text size="8" />
			</control>
			<summary>Unit Number </summary>
			<description>Unit Number </description>
			</attribute>

		</attributes>
    </businessObject>

</dictionaryEntry>
