<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.bo.UnitAdministrator">

        <inquiry>
            <title>Unit Administrator</title>

            <inquirySections><inquirySection title="Unit Administrator"><inquiryFields>
            	<field attributeName="person.fullName" forceInquiry="true"/>
				<field attributeName="unitAdministratorType.description" forceInquiry="true"/>
				<field attributeName="unit.unitName" forceInquiry="true"/>

            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Unit Administrator Lookup</title>
			<menubar>
				<![CDATA[<a href="index.jsp">Main</a>]]>
			</menubar>
            <instructions>Look up a Unit Administrators</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="personId"/>
					<sortAttribute attributeName="unitAdministratorTypeCode"/>
					<sortAttribute attributeName="unitNumber"/>

                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="personId" required="false"/>
				<lookupField attributeName="unitAdministratorTypeCode" required="false"/>
				<lookupField attributeName="unitNumber" required="false"/>

            </lookupFields>

            <resultFields>
            	<field attributeName="person.fullName" forceInquiry="true"/>
				<field attributeName="unitAdministratorType.description" forceInquiry="true"/>
				<field attributeName="unit.unitName" forceInquiry="true"/>

            </resultFields>
        </lookup>

		<!-- 
		can only have 0/1 title attribute, 
		removed titleAttribute per JIRA KRACOEUS-1747
	        <titleAttribute>personId</titleAttribute>
			<titleAttribute>roleId</titleAttribute>
			<titleAttribute>unitNumber</titleAttribute>
		-->
        <attributes>

			<attributeReference name="personId" sourceClassName="org.kuali.kra.bo.Person" sourceAttributeName="personId" />

			<attribute name="unitAdministratorTypeCode">
			<label>Unit Administrator Type Code </label>
			<shortLabel>Unit Administrator Type Code</shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><numeric /></validationPattern>
			<control>
				<text size="5" />
			</control>
			<summary>Unit Administrator Type Code </summary>
			<description>Unit Administrator Type Code </description>
			</attribute>

			<attribute name="unitNumber">
			<label>Unit Number </label>
			<shortLabel>Unit Number </shortLabel>
			<maxLength>8</maxLength>
			<validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>
			<control>
				<text size="8" />
			</control>
			<summary>Unit Number </summary>
			<description>Unit Number </description>
			</attribute>
			<attributeReference name="person.fullName" sourceClassName="org.kuali.kra.bo.Person" sourceAttributeName="fullName" />
			<attributeReference name="unitAdministratorType.description" sourceClassName="org.kuali.kra.bo.UnitAdministratorType" sourceAttributeName="description" />
			<attributeReference name="unit.unitName" sourceClassName="org.kuali.kra.bo.Unit" sourceAttributeName="unitName" />

			<attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

		</attributes>
    </businessObject>

</dictionaryEntry>
