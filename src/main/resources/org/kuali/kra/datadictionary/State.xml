<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.bo.State">

        <inquiry>
            <title>State Code</title>

            <inquirySections><inquirySection title="State Code Code"><inquiryFields>
                <field attributeName="countryCode" forceInquiry="true" />
                <field attributeName="stateCode" forceInquiry="true" />
                <field attributeName="description" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>State Code Lookup</title>
			<menubar>
				<![CDATA[<a href="/kra-dev/">Main</a>]]>
			</menubar>
            <instructions>Look up a State Code</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="countryCode" />
                    <sortAttribute attributeName="stateCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="countryCode" required="false" forceLookup="true" />
                <lookupField attributeName="stateCode" required="false" forceLookup="true" />
                <lookupField attributeName="description" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="countryCode" forceInquiry="true" />
                <field attributeName="stateCode" forceInquiry="true" />
                <field attributeName="description" forceInquiry="false"/>
            </resultFields>
        </lookup>

        <titleAttribute>stateCode</titleAttribute>

        <attributes>

            <attribute name="stateCode">
                <label>State Code</label>
                <shortLabel>State Code</shortLabel>

                <maxLength>15</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <control>
                    <text size="17" />
                </control>

                <summary>State Code</summary>
                <description>State Code</description>
			</attribute>

            <attribute name="description">
                <label>Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>40</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <control>
                    <text size="10" />
                </control>

                <summary>Description</summary>
                <description>State description...</description>
			</attribute>

		    <attributeReference name="countryCode" sourceClassName="org.kuali.kra.bo.Country" sourceAttributeName="countryCode"/>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
		</attributes>
    </businessObject>

</dictionaryEntry>