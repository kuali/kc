<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.bo.Unit">

        <inquiry>
            <title>Unit</title>

            <inquirySections><inquirySection title="Unit"><inquiryFields>
            	<field attributeName="unitNumber" forceInquiry="true"/>
				<field attributeName="parentUnit.unitName"/>
				<field attributeName="organization.organizationName"/>
				<field attributeName="unitName"/>

            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Unit Lookup</title>
			<menubar>
				<![CDATA[<a href="index.jsp">Main</a>]]>
			</menubar>
            <instructions>Look up a Unit</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="unitNumber"/>

                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="unitNumber" required="false"/>
				<lookupField attributeName="parentUnitNumber" required="false"/>
				<lookupField attributeName="organizationId" required="false"/>
				<lookupField attributeName="unitName" required="false"/>

            </lookupFields>

            <resultFields>
            	<field attributeName="unitNumber" forceInquiry="true"/>
				<field attributeName="parentUnit.unitName" forceInquiry="false"/>
				<field attributeName="organization.organizationName" forceInquiry="false"/>
				<field attributeName="unitName" forceInquiry="false"/>

            </resultFields>
        </lookup>

        <titleAttribute>unitNumber</titleAttribute>
        <attributes>

	        <attribute name="unitNumber">
			<label>Unit Number </label>
			<shortLabel>Unit Number </shortLabel>
			<maxLength>8</maxLength>
			<validationPattern><anyCharacter /></validationPattern>
            <required>true</required>
			<control>
				<text size="8" />
			</control>
			<summary>Unit Number </summary>
			<description>Unit Number </description>
			</attribute>

			<attribute name="parentUnitNumber">
			<label>Parent Unit Number </label>
			<shortLabel>Parent Unit Number </shortLabel>
			<maxLength>8</maxLength>
			<validationPattern><anyCharacter /></validationPattern>
			<control>
				<text size="8" />
			</control>
			<summary>Parent Unit Number </summary>
			<description>Parent Unit Number </description>
			</attribute>

            <attributeReference name="parentUnit.unitName" sourceClassName="org.kuali.kra.bo.Unit" sourceAttributeName="unitName" >
                <label>Parent Unit</label>
                <shortLabel>Parent Unit</shortLabel>
            </attributeReference>

			<attribute name="organizationId">
			<label>Organization Id </label>
			<shortLabel>Organization Id </shortLabel>
			<maxLength>8</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<text size="8" />
			</control>
			<summary>Organization Id </summary>
			<description>Organization Id </description>
			</attribute>

            <attributeReference name="organization.organizationName" sourceClassName="org.kuali.kra.bo.Organization" sourceAttributeName="organizationName" >
                <label>Organization</label>
                <shortLabel>Organization</shortLabel>
            </attributeReference>

			<attribute name="unitName">
			<label>Unit Name </label>
			<shortLabel>Unit Name </shortLabel>
			<maxLength>60</maxLength>
			<validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>
			<control>
				<text size="60" />
			</control>
			<summary>Unit Name </summary>
			<description>Unit Name </description>
			</attribute>
			<attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

		</attributes>

        <relationships>
            <relationship objectAttributeName="parentUnit">
                <primitiveAttribute sourceName="parentUnitNumber" targetName="unitNumber" />
                <supportAttribute sourceName="parentUnit.unitName" targetName="unitName" identifier="true" />
            </relationship>

            <relationship objectAttributeName="organization">
                <primitiveAttribute sourceName="organizationId" targetName="organizationId" />
                <supportAttribute sourceName="organization.organizationName" targetName="organizationName" identifier="true" />
            </relationship>
        </relationships>
    </businessObject>

</dictionaryEntry>
