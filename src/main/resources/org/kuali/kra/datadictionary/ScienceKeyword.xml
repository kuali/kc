<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.proposaldevelopment.bo.ScienceKeyword">

        <inquiry>
            <title>Science Keyword</title>

            <inquirySections><inquirySection title="Science Keyword"><inquiryFields>
                <field attributeName="scienceKeywordCode" forceInquiry="true" />
                <field attributeName="description" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Science Keyword Lookup</title>
			<menubar>
				<![CDATA[<a href="/kra-dev/">Main</a>]]>
			</menubar>
            <instructions>Look up a Science Keyword</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="scienceKeywordCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="scienceKeywordCode" required="false" />
                <lookupField attributeName="description" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="scienceKeywordCode" forceInquiry="true" />
                <field attributeName="description" forceInquiry="false"/>
            </resultFields>
        </lookup>

        <titleAttribute>scienceKeywordCode</titleAttribute>

        <attributes>

            <attribute name="scienceKeywordCode">
                <label>Science Keyword</label>
                <shortLabel>Science Keyword</shortLabel>

                <maxLength>15</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <control>
                    <text size="10" />
                </control>

                <summary>Science Keyword</summary>
                <description>Science Keyword</description>
			</attribute>

            <attribute name="description" forceUppercase="false">
                <label>Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>200</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <textarea rows="5" cols="40" />
                </control>

                <summary>Description</summary>
                <description>Description</description>
			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

		</attributes>
    </businessObject>

</dictionaryEntry>