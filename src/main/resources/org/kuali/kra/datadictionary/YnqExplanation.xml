<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.bo.YnqExplanation">

        <inquiry>
            <title>Ynq Explanation</title>

            <inquirySections><inquirySection title="Ynq Explanation"><inquiryFields>
            	<field attributeName="explanationType" forceInquiry="true"/>
				<field attributeName="questionId" forceInquiry="true"/>
				<field attributeName="explanation"/>

            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Ynq Explanation Lookup</title>
			<menubar>
				<![CDATA[<a href="index.jsp">Main</a>]]>
			</menubar>
            <instructions>Look up a Ynq Explanation</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="explanationType"/>
					<sortAttribute attributeName="questionId"/>

                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="explanationType" required="false"/>
				<lookupField attributeName="questionId" required="false"/>
				<lookupField attributeName="explanation" required="false"/>

            </lookupFields>

            <resultFields>
            	<field attributeName="explanationType" forceInquiry="true"/>
				<field attributeName="questionId" forceInquiry="true"/>
				<field attributeName="explanation" forceInquiry="false"/>

            </resultFields>
        </lookup>

		<titleAttribute>questionId</titleAttribute>
        <attributes>

			<attribute name="explanation">
			<label>Description</label>
			<shortLabel>Description</shortLabel>
			<maxLength>400</maxLength>
            <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>
            <control>
                 <textarea rows="5" cols="40" />
            </control>
			<summary>Explanation</summary>
			<description>Explanation</description>
			</attribute>

	        <attribute name="explanationType">
			<label>Explanation Type </label>
			<shortLabel>Explanation Type </shortLabel>
			<maxLength>1</maxLength>
			<validationPattern><alphaNumeric/></validationPattern>
			<control>
				<hidden/>
			</control>
			<summary>Explanation Type </summary>
			<description>Explanation Type </description>
			</attribute>

			<attribute name="questionId">
			<label>Question Id </label>
			<shortLabel>Question Id </shortLabel>
			<maxLength>4</maxLength>
			<validationPattern><alphaNumeric/></validationPattern>
			<control>
				<hidden />
			</control>
			<summary>Question Id </summary>
			<description>Question Id </description>
			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
            <!-- 
            <attributeReference name="ynqExplanationType.description" sourceClassName="org.kuali.kra.bo.YnqExplanationType" sourceAttributeName="description" />
             -->

		</attributes>
    </businessObject>

</dictionaryEntry>
