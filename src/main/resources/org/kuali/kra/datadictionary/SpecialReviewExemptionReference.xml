<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="SpecialReviewExemptionReference" parent="SpecialReviewExemptionReference-parentBean" />
	<bean id="SpecialReviewExemptionReference-parentBean" abstract="true" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.kuali.kra.bo.AbstractSpecialReviewExemption" />
		<property name="inquiryDefinition" >
			<ref bean="SpecialReviewExemptionReference-inquiryDefinition" />
		</property>
		<property name="lookupDefinition" >
			<ref bean="SpecialReviewExemptionReference-lookupDefinition" />
		</property>
		<property name="titleAttribute" value="exemptionTypeCode" />
		<property name="attributes" >
			<list>
				<ref bean="SpecialReviewExemptionReference-exemptionTypeCode" />
				<ref bean="SpecialReviewExemptionReference-versionNumber" />
			</list>
		</property>
	</bean>

	<!-- Attribute Definitions -->
	
	<bean id="SpecialReviewExemptionReference-exemptionTypeCode" parent="SpecialReviewExemptionReference-exemptionTypeCode-parentBean" />
	<bean id="SpecialReviewExemptionReference-exemptionTypeCode-parentBean" abstract="true" parent="AttributeDefinition" >
		<property name="name" value="exemptionTypeCode" />
		<property name="forceUppercase" value="false" />
		<property name="label" value="Exemption #" />
		<property name="shortLabel" value="Exemption #" />
		<property name="maxLength" value="3" />
		<property name="validationPattern" >
			<bean parent="AlphaNumericValidationPattern" />
		</property>
	    <property name="required" value="false" />
		<property name="control" >
			<bean parent="SelectControlDefinition"
	            p:businessObjectClass="org.kuali.kra.bo.ExemptionType"
	            p:valuesFinderClass="org.kuali.kra.lookup.keyvalue.ExtendedPersistableBusinessObjectValuesFinder"
	            p:includeKeyInLabel="false"
	            p:includeBlankRow="false"
	            p:keyAttribute="exemptionTypeCode"
	            p:labelAttribute="description" />
		</property>
		<property name="summary" value="Exemption Type Code" />
		<property name="description" value="Exemption Type Code" />
	</bean>

	<bean id="SpecialReviewExemptionReference-versionNumber" parent="SpecialReviewExemptionReference-versionNumber-parentBean" />
	<bean id="SpecialReviewExemptionReference-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
	</bean>

	<!-- Business Object Inquiry Definition -->
	<bean id="SpecialReviewExemptionReference-inquiryDefinition" parent="SpecialReviewExemptionReference-inquiryDefinition-parentBean" />
	<bean id="SpecialReviewExemptionReference-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
		<property name="title" value=" Exempt Number Id" />
		<property name="inquirySections" >
			<list>
				<bean parent="InquirySectionDefinition">
					<property name="title" value=" Exempt Number Id" />
					<property name="numberOfColumns" value="1" />
					<property name="inquiryFields" >
						<list>
							<bean parent="FieldDefinition"
								p:attributeName="exemptionTypeCode" />
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<!-- Business Object Lookup Definition -->
	<bean id="SpecialReviewExemptionReference-lookupDefinition" parent="SpecialReviewExemptionReference-lookupDefinition-parentBean" />
	<bean id="SpecialReviewExemptionReference-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
		<property name="title" value=" Exempt Number Lookup" />
		<property name="menubar" value="&lt;a href=&quot;index.jsp&quot;&gt;Main&lt;/a&gt;" />
		<property name="instructions" value="Look up a  Exempt Number" />
		<property name="defaultSort" >
			<bean parent="SortDefinition" >
		</bean>
		</property>
		<property name="lookupFields" >
			<list>
				<bean parent="FieldDefinition"
					p:attributeName="exemptionTypeCode" />
			</list>
		</property>
		<property name="resultFields" >
			<list>
				<bean parent="FieldDefinition"
					p:attributeName="exemptionTypeCode" />
			</list>
		</property>
	</bean>
</beans>
