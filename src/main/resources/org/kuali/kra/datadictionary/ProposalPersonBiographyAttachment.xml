<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.proposaldevelopment.bo.ProposalPersonBiographyAttachment">

        <inquiry>
            <title>Prop Person Bio Pdf</title>

            <inquirySections><inquirySection title="Prop Person Bio Pdf"><inquiryFields>
            	<field attributeName="proposalPersonNumber" forceInquiry="true"/>
				<field attributeName="proposalNumber" forceInquiry="true"/>
				<field attributeName="biographyNumber" forceInquiry="true"/>
				<field attributeName="biographyData"/>
				<field attributeName="fileName"/>

            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Prop Person Bio Pdf Lookup</title>
			<menubar>
				<![CDATA[<a href="index.jsp">Main</a>]]>
			</menubar>
            <instructions>Look up a Prop Person Bio Pdf</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="proposalPersonNumber"/>
					<sortAttribute attributeName="biographyNumber"/>
					<sortAttribute attributeName="proposalNumber"/>

                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="proposalPersonNumber" required="false"/>
				<lookupField attributeName="biographyNumber" required="false"/>
				<lookupField attributeName="proposalNumber" required="false"/>
				<lookupField attributeName="biographyData" required="false"/>
				<lookupField attributeName="fileName" required="false"/>

            </lookupFields>

            <resultFields>
            	<field attributeName="proposalPersonNumber" forceInquiry="true"/>
            	<field attributeName="biographyNumber" forceInquiry="true"/>
				<field attributeName="proposalNumber" forceInquiry="true"/>
				<field attributeName="biographyData" forceInquiry="false"/>
				<field attributeName="fileName" forceInquiry="false"/>

            </resultFields>
        </lookup>

        <titleAttribute>proposalPersonNumber</titleAttribute>
        <!-- only allow 0 or 1 titleattribute 
		<titleAttribute>personId</titleAttribute>
		<titleAttribute>proposalNumber</titleAttribute>
		-->
        <attributes>

	        <attribute name="proposalPersonNumber">
			<label>Proposal Person Number </label>
			<shortLabel>Proposal Person Number </shortLabel>
			<maxLength>12</maxLength>
			<validationPattern><numeric /></validationPattern>
			<control>
				<text size="12" />
			</control>
			<summary>Proposal Person Number </summary>
			<description>Proposal Person Number </description>
			</attribute>
	        <attribute name="biographyNumber">
			<label>Biography Number </label>
			<shortLabel>Biography Number </shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<text size="3" />
			</control>
			<summary>Biography Number </summary>
			<description>Biography Number </description>
			</attribute>

			<attribute name="proposalNumber">
			<label>Proposal Number </label>
			<shortLabel>Proposal Number </shortLabel>
				<maxLength>12</maxLength>
				<validationPattern>
					<numeric />
				</validationPattern>
				<control>
					<text size="12" />
				</control>
			<summary>Proposal Number </summary>
			<description>The unique proposal number identifying a proposal. This is a system generated, sequential number. </description>
			</attribute>

			<attribute name="biographyData">
			<label>Bio Attachment File</label>
			<shortLabel>Bio Attachment File</shortLabel>
			<maxLength>0</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<text size="0" />
			</control>
			<summary>Bio Attachment File</summary>
			<description>Bio Attachment File</description>
			</attribute>

			<attribute name="fileName">
			<label>File Name </label>
			<shortLabel>File Name </shortLabel>
			<maxLength>150</maxLength>
			<validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>
			<control>
				<text size="150" />
			</control>
			<summary>File Name </summary>
			<description>File Name </description>
			</attribute>

		</attributes>
    </businessObject>

</dictionaryEntry>
