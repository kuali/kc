<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.budget.bo.RateClass">

        <inquiry>
            <title>Rate Class</title>

            <inquirySections><inquirySection title="Rate Class"><inquiryFields>
            	<field attributeName="rateClassCode" forceInquiry="true"/>
				<field attributeName="description"/>
				<field attributeName="rateClassType"/>

            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Rate Class Lookup</title>
			<menubar>
				<![CDATA[<a href="/kra-dev/">Main</a>]]>
			</menubar>
            <instructions>Look up a Rate Class</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="rateClassCode"/>

                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="rateClassCode" required="false"/>
				<lookupField attributeName="description" required="false"/>
				<lookupField attributeName="rateClassType" required="false"/>

            </lookupFields>

            <resultFields>
            	<field attributeName="rateClassCode" forceInquiry="true"/>
				<field attributeName="description" forceInquiry="false"/>
				<field attributeName="rateClassType" forceInquiry="false"/>

            </resultFields>
        </lookup>

        <titleAttribute>rateClassCode</titleAttribute>
        <attributes>

	        <attribute name="rateClassCode">
			<label>Rate Class Code </label>
			<shortLabel>Rate Class Code </shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<text size="3" />
			</control>
			<summary>Rate Class Code </summary>
			<description>Rate Class Code </description>
			</attribute>

			<attribute name="description">
			<label>Description </label>
			<shortLabel>Description </shortLabel>
			<maxLength>200</maxLength>
			<validationPattern><anyCharacter /></validationPattern>
			<control>
				<text size="200" />
			</control>
			<summary>Description </summary>
			<description>Description </description>
			</attribute>

			<attribute name="rateClassType">
			<label>Rate Class Type </label>
			<shortLabel>Rate Class Type </shortLabel>
			<maxLength>1</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<text size="1" />
			</control>
			<summary>Rate Class Type </summary>
			<description>Rate Class Type </description>
			</attribute>

		</attributes>
    </businessObject>

</dictionaryEntry>
