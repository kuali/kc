<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.bo.NoticeOfOpportunity">

        <inquiry>
            <title>Notice of Opportunity</title>

            <inquirySections><inquirySection title="Notice of Opportunity"><inquiryFields>
                <field attributeName="noticeOfOpportunityCode" forceInquiry="true" />
                <field attributeName="description" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Notice of Opportunity Lookup</title>
			<menubar>
				<![CDATA[<a href="../portal.do">Main</a>]]>
			</menubar>
            <instructions>Look up a Notice of Opportunity</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="noticeOfOpportunityCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="noticeOfOpportunityCode" required="false" />
                <lookupField attributeName="description" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="noticeOfOpportunityCode" forceInquiry="true" />
                <field attributeName="description" forceInquiry="false"/>
            </resultFields>
        </lookup>

        <titleAttribute>noticeOfOpportunityCode</titleAttribute>

        <attributes>

            <attribute name="noticeOfOpportunityCode">
                <label>Notice of Opportunity</label>
                <shortLabel>Notice of Opportunity</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <control>
                    <text size="3" />
                </control>

                <summary>Notice of Opportunity</summary>
                <description>Notice of Opportunity</description>
			</attribute>

            <attribute name="description" forceUppercase="false">
                <label>Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>200</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <textarea rows="5" cols="40" />
                </control>

                <summary>Description</summary>
                <description>Description</description>
			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

		</attributes>
    </businessObject>

</dictionaryEntry>