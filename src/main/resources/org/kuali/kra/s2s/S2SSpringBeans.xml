 		scope="prototype" parent="lookupableHelperService"> 
 		<property name="s2SService" >
  			<ref bean="s2SService"/>
  		</property>
  	</bean>		
	 
	
	<bean id="s2SFormGeneratorService"
		class="org.kuali.kra.s2s.service.impl.S2SFormGeneratorServiceImpl">
	</bean>

	<bean id="s2SValidatorService"
