	</bean>
	
	
	<bean id="s2SService"
		class="org.kuali.kra.s2s.service.impl.KRAS2SServiceImpl">
		<property name="businessObjectService">
			<ref bean="businessObjectService" />
		</property>
		<property name="s2SFormGeneratorService">
			<ref bean="s2SFormGeneratorService" />
		</property>
