        <rule>
            <name>IRBReviewCompleteRule</name>
            <documentType>ProtocolDocument</documentType>
            <ruleTemplate>IRBReviewComplete</ruleTemplate>
            <description>IRBReviewComplete Routing</description>
            <forceAction>true</forceAction>
            <ruleExtensions>
            <ruleExtension>            
              <attribute>ProtocolWorkflowTypeAttribute</attribute>
              <ruleTemplate>IRBReviewComplete</ruleTemplate>
              <ruleExtensionValues>
                <ruleExtensionValue>
                  <key>protocolWorkflowType</key>
                  <value>Normal</value>
                </ruleExtensionValue>
              </ruleExtensionValues>
              </ruleExtension>            
            </ruleExtensions>
            <responsibilities>
                <responsibility><groupName namespace="KC-WKFLW">IRBAdmin</groupName></responsibility>
            </responsibilities>
        </rule>-->
    </rules>
</data>