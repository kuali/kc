<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="CorrespondentTypeMaintenanceDocument" parent="CorrespondentTypeMaintenanceDocument-parentBean" />
    <bean id="CorrespondentTypeMaintenanceDocument-parentBean" abstract="true" parent="KcMaintenanceDocumentEntry">
        <property name="businessObjectClass" value="org.kuali.kra.irb.correspondence.CorrespondentType" />
        <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
        <property name="maintainableSections" >
            <list>
                <ref bean="CorrespondentTypeMaintenanceDocument-EditCorrespondentType" />
            </list>
        </property>
        <property name="lockingKeys" >
            <list>
                <value>correspondentTypeCode</value>
            </list>
        </property>
        <property name="allowsRecordDeletion" value="true" />

        <property name="documentTypeName" value="CorrespondentTypeMaintenanceDocument" />
        <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase" />
    </bean>

    <!-- Maintenance Section Definitions -->
    
    <bean id="CorrespondentTypeMaintenanceDocument-EditCorrespondentType" parent="CorrespondentTypeMaintenanceDocument-EditCorrespondentType-parentBean" />
    <bean id="CorrespondentTypeMaintenanceDocument-EditCorrespondentType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
        <property name="id" value="Edit Correspondent Type" />
        <property name="title" value="Edit Correspondent Type" />
        <property name="maintainableItems" >
            <list>
                <bean parent="MaintainableFieldDefinition"
                    p:name="correspondentTypeCode"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="description"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="qualifier"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
            </list>
        </property>
    </bean>
</beans>
