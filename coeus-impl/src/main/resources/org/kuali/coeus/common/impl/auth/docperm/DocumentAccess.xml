<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="DocumentAccess" parent="DocumentAccess-parentBean" />
    <bean id="DocumentAccess-parentBean" abstract="true" parent="DataObjectEntry"
            p:dataObjectClass="org.kuali.coeus.common.framework.auth.docperm.DocumentAccess"
            p:objectLabel="Document Access">
        <property name="attributes">
            <list>
                <ref bean="DocumentAccess-id" />
                <ref bean="DocumentAccess-documentNumber" />
                <ref bean="DocumentAccess-principalId" />
                <ref bean="DocumentAccess-roleName" />
                <ref bean="DocumentAccess-namespaceCode" />
            </list>
        </property>
    </bean>

    <!-- Attribute Definitions -->
    <bean id="DocumentAccess-id" parent="DocumentAccess-id-parentBean" />
    <bean id="DocumentAccess-id-parentBean" abstract="true" parent="AttributeDefinition"
            p:name="id"
            p:forceUppercase="false"
            p:label="Document Access Id"
            p:shortLabel="Doc Access Id"
            p:summary="Document Access Id"
            p:description="Document Access Id">
        <property name="validCharactersConstraint">
            <bean parent="NumericPatternConstraint" />
        </property>
        <property name="simpleConstraint">
            <bean parent="SimpleConstraint" p:maxLength="12" p:required="true" />
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="14"/>
        </property>
    </bean>

    <bean id="DocumentAccess-documentNumber" parent="DocumentAccess-documentNumber-parentBean"/>
    <bean id="DocumentAccess-documentNumber-parentBean" abstract="true" parent="AttributeDefinition"
            p:name="documentNumber"
            p:forceUppercase="true"
            p:shortLabel="Doc Nbr"
            p:summary="Document Number"
            p:label="Document Number"
            p:description="The document id is generated by the workflow environment and is unique to each installation of Kuali...">
        <property name="simpleConstraint">
            <bean parent="SimpleConstraint" p:maxLength="14" p:required="true" />
        </property>
        <property name="validCharactersConstraint">
            <bean parent="AlphaNumericPatternConstraint" p:upperCase="true" />
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="16"/>
        </property>
    </bean>

    <bean id="DocumentAccess-principalId" parent="DocumentAccess-principalId-parentBean" />
    <bean id="DocumentAccess-principalId-parentBean" parent="AttributeDefinition" abstract="true"
          p:name="principalId"
          p:forceUppercase="true"
          p:label="Principal ID"
          p:shortLabel="Principal ID">
        <property name="simpleConstraint">
            <bean parent="SimpleConstraint" p:maxLength="40" p:required="true" />
        </property>
        <property name="validCharactersConstraint">
            <bean parent="AlphaNumericPatternConstraint" p:upperCase="true" />
        </property>
        <property name="controlField" >
            <bean parent="Uif-TextControl" p:size="15" />
        </property>
    </bean>

    <bean id="DocumentAccess-roleName" parent="DocumentAccess-roleName-parentBean"/>
    <bean id="DocumentAccess-roleName-parentBean" parent="AttributeDefinition" abstract="true"
          p:name="roleName"
          p:forceUppercase="false"
          p:label="Role Name"
          p:shortLabel="Role Name">
        <property name="simpleConstraint">
            <bean parent="SimpleConstraint" p:maxLength="80" p:required="true" />
        </property>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint" p:allowWhitespace="true" />
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="30"/>
        </property>
    </bean>

    <bean id="DocumentAccess-namespaceCode" parent="DocumentAccess-namespaceCode-parentBean"/>
    <bean id="DocumentAccess-namespaceCode-parentBean" abstract="true" parent="AttributeDefinition"
            p:name="namespaceCode"
            p:forceUppercase="true"
            p:label="Role Namespace Code"
            p:shortLabel="Role Namespace Cd"
            p:summary="Code identifying the role namespace"
            p:description="Code identifying the role namespace">
        <property name="simpleConstraint">
            <bean parent="SimpleConstraint" p:maxLength="20" p:required="true" />
        </property>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint" p:allowWhitespace="true" />
        </property>
    </bean>

    <bean id="DocumentAccess-InquiryView" parent="DocumentAccess-InquiryView-parentBean"/>
    <bean id="DocumentAccess-InquiryView-parentBean" abstract="true" parent="Uif-InquiryView"
            p:headerText="Document Access"
            p:dataObjectClassName="org.kuali.coeus.common.framework.auth.docperm.DocumentAccess">
        <property name="items">
            <list>
                <bean parent="Uif-Disclosure-GridSection"
                      p:order="10"
                      p:headerText="Document Access"
                      p:layoutManager.numberOfColumns="2">
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:propertyName="documentNumber" p:order="10"/>
                            <bean parent="Uif-DataField" p:propertyName="principalId" p:order="20"/>
                            <bean parent="Uif-DataField" p:propertyName="roleName" p:order="30"/>
                            <bean parent="Uif-DataField" p:propertyName="namespaceCode" p:order="40"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="DocumentAccess-LookupView" parent="DocumentAccess-LookupView-parentBean"/>
    <bean id="DocumentAccess-LookupView-parentBean" abstract="true" parent="Uif-LookupView"
            p:headerText="Document Access Lookup"
            p:dataObjectClassName="org.kuali.coeus.common.framework.auth.docperm.DocumentAccess">
        <property name="defaultSortAttributeNames">
            <list>
                <value>documentNumber</value>
            </list>
        </property>
        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="documentNumber" p:order="10" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="principalId" p:order="20" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="roleName" p:order="30" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="namespaceCode"  p:order="40" />
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="Uif-DataField" p:propertyName="documentNumber" p:order="10" />
                <bean parent="Uif-DataField" p:propertyName="principalId" p:order="20" />
                <bean parent="Uif-DataField" p:propertyName="roleName" p:order="30" />
                <bean parent="Uif-DataField" p:propertyName="namespaceCode" p:order="40" />
            </list>
        </property>
    </bean>

</beans>
