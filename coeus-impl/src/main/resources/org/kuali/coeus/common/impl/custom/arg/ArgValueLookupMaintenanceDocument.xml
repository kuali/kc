<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="ArgValueLookupMaintenanceDocument" parent="ArgValueLookupMaintenanceDocument-parentBean" />
    <bean id="ArgValueLookupMaintenanceDocument-parentBean" abstract="true" parent="KcMaintenanceDocumentEntry">
        <property name="businessObjectClass" value="org.kuali.coeus.common.framework.custom.arg.ArgValueLookup" />
        <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
        <property name="maintainableSections" >
            <list>
                <ref bean="ArgValueLookupMaintenanceDocument-EditArgValueLookup" />
            </list>
        </property>
        <property name="lockingKeys" >
            <list>
                <value>id</value>
            </list>
        </property>
        <property name="allowsRecordDeletion" value="true" />
        <property name="documentTypeName" value="ArgValueLookupMaintenanceDocument" />
        <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase" />
    </bean>

    <!-- Maintenance Section Definitions -->
    
    <bean id="ArgValueLookupMaintenanceDocument-EditArgValueLookup" parent="ArgValueLookupMaintenanceDocument-EditArgValueLookup-parentBean" />
    <bean id="ArgValueLookupMaintenanceDocument-EditArgValueLookup-parentBean" abstract="true" parent="MaintainableSectionDefinition">
        <property name="id" value="Edit Arg Value Lookup" />
        <property name="title" value="Edit Arg Value Lookup" />
        <property name="maintainableItems" >
            <list>
                <bean parent="MaintainableFieldDefinition"
                    p:name="id"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="argumentName"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="value"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="description" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
            </list>
        </property>
    </bean>
</beans>
